<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="434dp"
        android:background="@drawable/shape_login_btn">

        <View
            android:id="@+id/view_label"
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <RelativeLayout
            android:id="@+id/layout_top"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/view_label">

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:onClick="onBack"
                android:scaleType="center"
                android:src="@drawable/arrow_left_white" />

            <TextView
                android:id="@+id/tv_activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/wave_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_wave" />

        <RelativeLayout
            android:id="@+id/control_label"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_above="@+id/wave_label"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_bedroom_curtain">

        </RelativeLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/window_open_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/window_open_img"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/shape_green_round"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_bedroom_curtain_open" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="打开"
                    android:textColor="@color/text_black"
                    android:textSize="17dp" />


            </LinearLayout>
        </LinearLayout>

        <include layout="@layout/layout_line_v"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/window_stop_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/window_stop_img"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/shape_green_round"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_bedroom_curtain_pause" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="暂停"
                    android:textColor="@color/text_black"
                    android:textSize="17dp" />

            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/layout_line_v"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/window_close_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/window_close_img"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/shape_green_round"
                    android:visibility="invisible"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_bedroom_curtain_close" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="关闭"
                    android:textColor="@color/text_black"
                    android:textSize="17dp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>