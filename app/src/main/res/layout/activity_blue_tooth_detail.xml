<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <include layout="@layout/layout_line_gray" />


    <RelativeLayout
        android:id="@+id/nick_name_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Wi-Fi账号"
            android:textColor="#333333"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/wifi_name_edt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="200dp"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingRight="25dp"
            android:text=""
            android:background="@color/transparent"
            android:textColor="#ff898989"
            android:textSize="16dp"
            android:hint="请输入Wi-Fi账号"
            android:gravity="center|right"
            android:inputType="textVisiblePassword"
            android:textColorHint="@color/text_hint"/>



        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="Wi-Fi密码"
            android:textColor="#333333"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/wifi_psw_edt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="200dp"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingRight="25dp"
            android:text=""
            android:background="@color/transparent"
            android:textColor="#ff898989"
            android:textSize="16dp"
            android:hint="请输入密码"
            android:gravity="center|right"
            android:inputType="textVisiblePassword"
            android:textColorHint="@color/text_hint"/>

        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/shape_login_btn"
        android:text="确认"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>