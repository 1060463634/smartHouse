<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar_save" />

    <include layout="@layout/layout_line_gray" />


    <RelativeLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="电话号码"
            android:textColor="#333333"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/phone_edt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:background="@color/white"
            android:layout_toRightOf="@+id/name_label"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingRight="45dp"
            android:text=""
            android:textColor="@color/text_black_gray"
            android:textSize="16dp"
            android:inputType="phone"
            android:hint="请输入电话号码"
            android:gravity="center_vertical|right"
            android:textColorHint="@color/text_hint"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_arrow_right" />

        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/open_contact_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/selector_ver_code"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="13dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:text="从通讯录获取"
        android:layout_gravity="right"
        android:textColor="#ff289cff"
        android:textSize="13dp"/>

    <RelativeLayout
        android:id="@+id/tip_name_layout"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tip_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="备注名"
            android:textColor="#333333"
            android:textSize="17dp" />

        <EditText
            android:id="@+id/tip_name_edt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:background="@color/white"
            android:layout_toRightOf="@+id/tip_label"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:paddingRight="45dp"
            android:text=""
            android:textColor="@color/text_black_gray"
            android:textSize="16dp"
            android:hint="请输入备注名"
            android:gravity="center_vertical|right"
            android:textColorHint="@color/text_hint"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_arrow_right" />

        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/role_layout"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/role_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="成员角色"
            android:textColor="#333333"
            android:textSize="17dp" />

        <Spinner
            android:id="@+id/role_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            />


        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>



</LinearLayout>