<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="情景"
            android:textColor="#ff333333"
            android:textStyle="bold"
            android:textSize="18dp"/>

    </LinearLayout>

    <include layout="@layout/layout_line_gray"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/night_scene_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/selector_scence_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_night"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:text="晚安"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/morning_scene_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/selector_scence_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_morning"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:text="早安"
            android:textColor="#ff333333"
            android:textStyle="bold"
            android:textSize="17dp"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/leave_scene_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/selector_scence_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_leave"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:text="外出"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_scene_img"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="@drawable/selector_scence_img"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:src="@drawable/ic_back_home"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_gravity="right|bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="30dp"
            android:text="回家"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="17dp"
            />
    </FrameLayout>



</LinearLayout>