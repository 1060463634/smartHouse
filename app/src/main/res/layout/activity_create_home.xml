<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/layout_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/home_name_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_common_height"
            android:layout_marginTop="22dp"
            android:background="@color/white"
            android:hint="请输入家庭名称"
            android:singleLine="true"
            android:textColor="@color/text_blue"
            android:textColorHint="@color/text_hint_blue"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff67b9ff" />

        <EditText
            android:id="@+id/home_location_edt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_common_height"
            android:layout_marginTop="21dp"
            android:background="@color/white"
            android:hint="地理位置"
            android:singleLine="true"
            android:textColor="@color/text_blue"
            android:textColorHint="@color/text_hint_blue"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ff67b9ff" />


        <RelativeLayout
            android:id="@+id/home_img_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="21dp"
            android:layout_height="96dp"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="图片"
                android:textColor="@color/text_blue"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/home_img"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="45dp"
                android:src="@drawable/ic_home_1" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_right" />


        </RelativeLayout>



        <Button
            android:id="@+id/next_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="41dp"
            android:background="@drawable/shape_login_btn"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="16dp" />



    </LinearLayout>
</LinearLayout>