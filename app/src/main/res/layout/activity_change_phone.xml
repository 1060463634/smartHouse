<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/layout_title_bar" />

    <include layout="@layout/layout_line_gray" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="当前手机号"
            android:textColor="#333333"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/old_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:textColor="#ff898989"
            android:textSize="16dp" />

        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/ver_code_edt"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:hint="请输入短信验证码"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="17dp"
            android:textColorHint="@color/text_hint" />

        <Button
            android:id="@+id/ver_code_btn"
            android:layout_width="80dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_ver_code"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="获取验证码"
            android:textColor="#ff289cff"
            android:textSize="13dp"/>


        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/new_phone_edt"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:hint="请输入新手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="17dp"
            android:textColorHint="@color/text_hint" />


        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/confirm_phone_edt"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:hint="请再次输入新手机号"
            android:inputType="phone"
            android:singleLine="true"
            android:textColor="#333333"
            android:textSize="17dp"
            android:textColorHint="@color/text_hint" />


        <include
            layout="@layout/layout_line_gray"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginBottom="45dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/shape_login_btn"
        android:text="确认"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="18dp" />


</LinearLayout>